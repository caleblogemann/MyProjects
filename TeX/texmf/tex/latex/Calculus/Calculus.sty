\let\oldint\int
\renewcommand{\int}[1]{\oldint\!{#1}}
\newcommand{\intt}[2]{\oldint\!{#1}\,\mathrm{d}{#2}}
\newcommand{\dint}[3]{\oldint_{#1}^{#2}\!{#3}}
\newcommand{\dintt}[4]{\oldint_{#1}^{#2}\!{#3}\,\mathrm{d}{#4}}

\let\oldiint\iint
\renewcommand{\iint}[4]{\oldiint_{#1}\!{#2}\,\mathrm{d}{#3}\,\mathrm{d}{#4}}

\newcommand{\deriv}[2]{\frac{\mathrm{d}{#1}}{\mathrm{d}{#2}}}
\newcommand{\derivs}[3]{\frac{\mathrm{d}^{#1}{#2}}{\mathrm{d}{#3}^{#1}}}
\newcommand{\pderiv}[2]{\frac{\partial{#1}}{\partial{#2}}}
\newcommand{\pderivs}[3]{\frac{\partial^{#1}{#2}}{\partial{#3}^{#1}}}
